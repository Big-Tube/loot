{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "sourceMap": true,
        "module": "es6",
        "target": "es6",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "./src/**/*"
    ]
}
