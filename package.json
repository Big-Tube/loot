{
  "name": "loot",
  "author": "Oliver Hamlet <oliver.hamlet@gmail.com>",
  "version": "0.9.1",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/loot/loot.git"
  },
  "bugs": {
    "url": "https://github.com/loot/loot/issues"
  },
  "homepage": "https://github.com/loot/loot",
  "private": true,
  "dependencies": {
    "decompress": "^4.0.0",
    "decompress-unzip": "^4.0.1",
    "fs-extra": "^5.0.0",
    "github-api": "^3.0.0",
    "jed": "^1.1.1",
    "jed-gettext-parser": "^1.0.0",
    "lodash": "^4.17.5",
    "marked": "^0.3.17",
    "polymer-analyzer": "^2.7.0",
    "replace": "^0.3.0",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.4",
    "awesome-typescript-loader": "^3.5.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "bower": "^1.7.1",
    "copy-webpack-plugin": "^4.5.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-typescript": "^0.9.0",
    "html-webpack-plugin": "^3.0.4",
    "jest": "^22.4.2",
    "mkdirp": "^0.5.1",
    "prettier": "^1.11.1",
    "regenerator-runtime": "^0.11.1",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^22.4.1",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "scripts": {
    "build": "node ./scripts/build_ui.js && webpack",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore --ext .js --ext .ts ."
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "parser": "typescript-eslint-parser",
    "env": {
      "node": true,
      "browser": true,
      "jest": true
    },
    "globals": {
      "_": false,
      "GitHub": false,
      "Jed": false,
      "jedGettextParser": false,
      "loot": false,
      "marked": false,
      "Polymer": false
    },
    "plugins": [
      "html",
      "prettier",
      "typescript"
    ],
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      }
    },
    "rules": {
      "curly": [
        "error",
        "all"
      ],
      "linebreak-style": "off",
      "no-confusing-arrow": "error",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-underscore-dangle": "off",
      "prefer-destructuring": "off",
      "strict": [
        "error",
        "global"
      ],
      "import/extensions": {
        "js": "always",
        "ts": "always"
      },
      "prettier/prettier": "error",
      "typescript/adjacent-overload-signatures": "error",
      "typescript/class-name-casing": "error",
      "typescript/explicit-member-accessibility": "error",
      "typescript/member-delimiter-style": "error",
      "typescript/member-ordering": "error",
      "typescript/no-array-constructor": "error",
      "typescript/no-unused-vars": "error",
      "typescript/no-use-before-define": "error",
      "typescript/type-annotation-spacing": "error"
    }
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": "tests/gui/html/js/.+\\.(js|ts)$",
    "transform": {
      ".+\\.ts$": "ts-jest",
      "\\.js$": "babel-jest"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
